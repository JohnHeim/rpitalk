import argparse
from rpitalk import RPItalk


def parse_args():
    parser = argparse.ArgumentParser(
        description="Raspberry Pi hardware speech emulator"
    )

    parser.add_argument(
        "-p", "--port",
        default="/dev/ttyGS0",
        help="Serial port device (default: /dev/ttyGS0)"
    )

    parser.add_argument(
        "-d", "--debug",
        type=int,
        default=0,
        help="Debug level (0 = off)"
    )

    parser.add_argument(
        "-t", "--test",
        choices=["speech", "conn"],
        help="Run a test: speech or conn"
    )

    return parser.parse_args()

#=== MAIN ===#
if __name__ == "__main__":
    args = parse_args()
    rpitalk = RPItalk(args.port, args.debug)
    if args.test  == "speech":
        rpitalk.testSpeech()
    elif args.test == "conn":
        rpitalk.testConnection()
    else:
        rpitalk.emulate()
# EOF
